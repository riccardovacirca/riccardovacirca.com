<IfModule z_auth_module>
  ZAuthType "file"
  ZAuthFile "/var/www/html/server/passwd"
</IfModule>
<IfModule z_users_module>
  ZAuthType "file"
  ZAuthFile "/var/www/html/server/passwd"
</IfModule>
<IfModule z_downloader_module>
  ZAuthType "file"
  ZAuthFile "/var/www/html/server/passwd"
  ZDownloadDir "/var/www/html/server"
</IfModule>
<IfModule z_crypto_module>
  ZPublicCertKey "/var/www/html/server/public_key.pem"
  ZPrivateCertKey "/var/www/html/server/private_key.pem"
</IfModule>
<IfModule mod_session.c>
  Session On
  SessionCookieName ZSESSION path=/
  <IfModule mod_session_crypto.c>
  SessionCryptoPassphrase secret
  </IfModule>
  SessionHeader X-Replace-Session
</IfModule>